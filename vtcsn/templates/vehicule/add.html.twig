{% extends 'base.html.twig' %}

{% block title %}
	Ajouter Votre Voiture
{% endblock %}
{% block body %}
	<div class="container p-4 mt-4  ">
		<div class="row   justify-content-center   ">
			<div class="col-sm-12 col-md-6 register   ">

				<h1 style="text-align:center;">Car</h1>

				{{ form_start(vehiculeForm) }}
				<div class="mb-3">
					{{ form_row(vehiculeForm.typeVehicule) }}
					{{ form_row(vehiculeForm.numberPlace) }}
					{{ form_row(vehiculeForm.brand) }}
					{{ form_row(vehiculeForm.model) }}
					{{ form_row(vehiculeForm.color) }}
					{{ form_row(vehiculeForm.energie) }}
					{{ form_row(vehiculeForm.numberDoor) }}
					{{ form_row(vehiculeForm.licensePlate) }}
					{{ form_row(vehiculeForm.image ) }}


					<button type="submit" class="btn btn-primary btn-ld my-3" style="width:100%;	border-radius: 15px;">Enregistrer</button>

					{{ form_end(vehiculeForm) }}


				</div>


			</div>


		</div>
	</div>

{% endblock %}
